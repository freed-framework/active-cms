{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "es6",
        "lib": [
            "DOM",
            "ES6",
            "DOM.Iterable",
            "ScriptHost",
            "ES7"
        ],
        "jsx": "Preserve",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./**/*",
    ],
    "exclude": [
        "../node_modules"
    ]
}